<?xml version="1.0" encoding="UTF-8"?>
<ExtensionManifest ExtensionBundleId="com.yourname.mypanel" ExtensionBundleVersion="1.0.0" Version="12.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <ExtensionList>
        <Extension Id="com.yourname.mypanel.main" Version="1.0.0" />
    </ExtensionList>
    
    <ExecutionEnvironment>
        <HostList>
            <!-- After Effects -->
            <Host Name="AEFT" Version="[23.0,99.9]" />
        </HostList>
        <LocaleList>
            <Locale Code="All" />
        </LocaleList>
        <RequiredRuntimeList>
            <RequiredRuntime Name="CSXS" Version="12.0" />
        </RequiredRuntimeList>
    </ExecutionEnvironment>
    
    <DispatchInfoList>
        <Extension Id="com.yourname.mypanel.main">
            <DispatchInfo>
                <Resources>
                    <MainPath>./index.html</MainPath>
                    <ScriptPath>./jsx/main.jsx</ScriptPath>
                    <CEFCommandLine>
                        <Parameter>--enable-nodejs</Parameter>
                        <Parameter>--mixed-context</Parameter>
                    </CEFCommandLine>
                </Resources>
                <Lifecycle>
                    <AutoVisible>true</AutoVisible>
                </Lifecycle>
                <UI>
                    <Type>Panel</Type>
                    <Menu>My Panel</Menu>
                    <Geometry>
                        <Size>
                            <Width>300</Width>
                            <Height>400</Height>
                        </Size>
                        <MinSize>
                            <Width>200</Width>
                            <Height>200</Height>
                        </MinSize>
                    </Geometry>
                    <Icons />
                </UI>
            </DispatchInfo>
        </Extension>
    </DispatchInfoList>
</ExtensionManifest>
